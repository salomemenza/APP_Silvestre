<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment_registroqr"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView2"

                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="QR"
                    android:textColor="#3F51B5"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/registroqr_btncamara"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_menu_camera"
                    android:tint="@color/black_opacity_60"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nro. Pedido"
                    android:textColor="#3F51B5"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/registroqr_NroPedido"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="120dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_textbox_olx"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cliente"
                    android:textColor="#3F51B5"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/registroqr_Cliente"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_textbox_olx"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nro. Guia"
                    android:textColor="#3F51B5"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/registroqr_Guia"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="120dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/borde_textbox_olx"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fotografia"
                    android:textColor="#3F51B5"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/registroqr_btnTomarFoto"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:tint="@color/black_opacity_60"
                    android:src="@drawable/ic_menu_camera"/>

                <ImageButton
                    android:id="@+id/registroqr_btnEliminarFoto"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/block_icon"
                    android:tint="@color/red"/>

<!--                <Button-->

<!--                    android:id="@+id/registroqr_btnTomarFoto"-->
<!--                    android:layout_width="30dp"-->
<!--                    android:layout_height="30dp"-->
<!--                    android:layout_weight="50"-->
<!--                    android:background="@drawable/ic_menu_camera"-->
<!--                    android:textColor="@color/white"-->
<!--                    android:textStyle="bold" />-->

<!--                <Button-->

<!--                    android:id="@+id/registroqr_btnEliminarFoto"-->
<!--                    android:layout_width="25dp"-->
<!--                    android:layout_height="25dp"-->
<!--                    android:layout_marginLeft="10dp"-->
<!--                    android:layout_weight="50"-->
<!--                    android:background="@color/red"-->
<!--                    android:text="X"-->
<!--                    android:textColor="@color/white"-->

<!--                    android:textStyle="bold" />-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/registroqr_Imagen"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:text="Fotografia" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="ObservaciÃ³n"
                    android:textColor="#3F51B5"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/registroqr_Observacion"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="0.5"

                    android:background="@drawable/borde_textbox_olx"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button

                    android:id="@+id/registroqr_btnGuardar"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="100"
                    android:background="@color/green"
                    android:text="Guardar"
                    android:textColor="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>


        </LinearLayout>

    </RelativeLayout>
</FrameLayout>